# AI Financial Assistant Environment Variables
# Copy this file to .env and fill in your actual values

# Gemini API Configuration (Required for AI features)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Database Configuration
CHROMA_DB_PATH=./chroma_db
DATA_FILE_PATH=data/transactions.json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=64

# Performance Configuration
QUERY_CACHE_SIZE=100
DEFAULT_TOP_K=5
MAX_RETRIEVAL_RESULTS=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Data Generation Configuration
TRANSACTIONS_PER_USER_MIN=100
TRANSACTIONS_PER_USER_MAX=200
NUM_USERS=3
USE_GEMINI_FOR_DATA_GENERATION=false
